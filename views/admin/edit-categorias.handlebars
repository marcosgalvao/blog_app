
{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar Categoria</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="POST">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" class="form-control" value="{{categoria.nome}}" placeholder="Nome da categoria">
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" class="form-control" value="{{categoria.slug}}" placeholder="Slug da categoria">
            <br>
            <button type="submit" class="btn btn-success">Editar Categoria</button>
        </form>
    </div>
</div>